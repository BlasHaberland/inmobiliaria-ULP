@model List<inmobiliaria.Models.Inmueble>

@{
    ViewData["Title"] = "Listado de Inmuebles";
}

<h2 class="my-4">Lista de Inmuebles</h2>


<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Dirección</th>
            <th>Tipo</th>
            <th>Ambientes</th>
            <th>Precio</th>
            <th>Estado</th>
            <th>Activo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inmueble in Model)
        {
            <tr>
                <td>@inmueble.Id_Inmueble</td>
                <td>@inmueble.Direccion</td>
                <td>@inmueble.Id_Tipo</td>
                <td>@inmueble.Cantidad_Ambientes</td>
                <td>@inmueble.Precio</td>
                <td>@inmueble.Estado</td>
                <td>
                    <span class="badge @(inmueble.Activo ? "bg-success" : "bg-danger")">
                        @(inmueble.Activo ? "Sí" : "No")
                    </span>
                </td>
                <td>
                    @if (inmueble.Activo)
                    {
                        <a class="btn btn-sm btn-danger" asp-action="Eliminar" asp-route-id="@inmueble.Id_Inmueble"
                            onclick="return confirm('¿Seguro que desea dar de baja este inmueble?');">
                            Dar de baja
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-success" asp-action="Alta" asp-route-id="@inmueble.Id_Inmueble"
                            onclick="return confirm('¿Seguro que desea dar de alta este inmueble?');">
                            Dar de alta
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>