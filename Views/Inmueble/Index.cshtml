@model List<inmobiliaria.Models.Inmueble>

@{
    ViewData["Title"] = "Listado de Inmuebles";
    var estadoFiltro = Context.Request.Query["estado"].ToString();
}

<h2 class="my-4">Lista de Inmuebles</h2>

<form method="get" asp-action="Index" class="mb-3 d-flex align-items-center">
    <label for="estado" class="me-2">Filtrar por estado:</label>
    <select name="estado" id="estado" class="form-select me-2" style="width:auto;">
        <option value="">Todos</option>
        @if (estadoFiltro == "disponible")
        {
            <option value="disponible" selected>Disponible</option>
        }
        else
        {
            <option value="disponible">Disponible</option>
        }
        @if (estadoFiltro == "ocupado")
        {
            <option value="ocupado" selected>Ocupado</option>
        }
        else
        {
            <option value="ocupado">Ocupado</option>
        }
        @if (estadoFiltro == "suspendido")
        {
            <option value="suspendido" selected>Suspendido</option>
        }
        else
        {
            <option value="suspendido">Suspendido</option>
        }
    </select>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Filtrar
        </button>
    </div>
</form>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Dirección</th>
            <th>Tipo</th>
            <th>Ambientes</th>
            <th>Precio</th>
            <th>Estado</th>
            <th>Activo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inmueble in Model)
        {
            <tr>
                <td>@inmueble.Id_Inmueble</td>
                <td>@inmueble.Direccion</td>
                <td>@inmueble.Id_Tipo</td>
                <td>@inmueble.Cantidad_Ambientes</td>
                <td>@inmueble.Precio</td>
                <td>@inmueble.Estado</td>
                <td>
                    <span class="badge @(inmueble.Activo ? "bg-success" : "bg-danger")">
                        @(inmueble.Activo ? "Sí" : "No")
                    </span>
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Editar" asp-route-id="@inmueble.Id_Inmueble">
                        Actualizar
                    </a>

                    @if (User.IsInRole("administrador"))
                    {

                        @if (inmueble.Activo)
                        {
                            <a class="btn btn-sm btn-danger" asp-action="Eliminar" asp-route-id="@inmueble.Id_Inmueble"
                                onclick="return confirm('¿Seguro que desea dar de baja este inmueble?');">
                                Dar de baja
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-sm btn-success" asp-action="Alta" asp-route-id="@inmueble.Id_Inmueble"
                                onclick="return confirm('¿Seguro que desea dar de alta este inmueble?');">
                                Dar de alta
                            </a>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>