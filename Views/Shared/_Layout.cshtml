<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inmobiliaria</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/inmobiliaria.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)

    <style>
        body {
            background-color: #181a1b;
            color: #f1f1f1;
        }

        .navbar,
        .dropdown-menu {
            background-color: #23272b !important;
        }

        .navbar .navbar-brand,
        .navbar .nav-link,
        .dropdown-item {
            color: #f1f1f1 !important;
            border-radius: 5px;
        }

        .navbar .nav-link.active,
        .navbar .nav-link:focus,
        .navbar .nav-link:hover,
        .dropdown-item:hover {
            color: #ffffff !important;
            background-color: #333435 !important;
        }

        .footer {
            background-color: #23272b;
            color: #cfcfcf;
        }

        .dropdown-menu {
            border: 2px solid #d2d3d3;
        }
    </style>
</head>

<body>
    @if (ViewBag.OcultarNavbar == null || ViewBag.OcultarNavbar == false)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Inmobiliaria</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <!-- Propietario Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="propietariosDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    Propietarios
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="propietariosDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Propietario"
                                            asp-action="Index">Lista</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Propietario"
                                            asp-action="Crear">Crear</a>
                                    </li>
                                </ul>
                            </li>

                            <!-- Inquilinos Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="inquilinosDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    Inquilinos
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="inquilinosDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Inquilino"
                                            asp-action="Index">Lista</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Inquilino"
                                            asp-action="Crear">Crear</a>
                                    </li>
                                </ul>
                            </li>

                            <!-- Inmuebles Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="inmueblesDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    Inmuebles
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="inmueblesDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Inmueble"
                                            asp-action="Index">Lista</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Inmueble"
                                            asp-action="Crear">Crear</a>
                                    </li>
                                </ul>
                            </li>
                            <!-- Usuario Dropdown -->
                            @if (User.IsInRole("administrador"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="usuariosDropdown" role="button"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                        Usuarios
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="usuariosDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Usuario"
                                                asp-action="Index">Lista</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Usuario"
                                                asp-action="Registro">Crear</a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            <!-- Contrato Dropdown -->

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="contratosDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    Contratos
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="contratosDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Contrato"
                                            asp-action="Index">Lista</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Contrato"
                                            asp-action="Crear">Nuevo Contrato</a>
                                    </li>
                                </ul>
                            </li>


                        </ul>
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <form asp-controller="Autenticacion" asp-action="Logout" method="post" class="d-flex ms-auto">
                                <button type="submit" class="btn btn-danger">Salir</button>
                            </form>
                        }
                    </div>
                </div>
            </nav>
        </header>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer py-3" style="background-color: #181a1b; color: #ffffff; border-top: 1px solid #23272b;">
        <div class="container text-center">
            Inmobiliaria - Desarrollado por Blas - .NET
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>