@model List<inmobiliaria.Models.Contrato>

@{
    ViewData["Title"] = "Listado de Contratos";
}


<h2>Lista de Contratos</h2>

<a asp-action="Crear" class="btn btn-success mb-3 mt-3">
    <i class="bi bi-plus-circle"></i> Crear Contrato
</a>


<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Inquilino</th>
            <th>Inmueble</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Monto Mensual</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contrato in Model)
        {
            <tr>
                <td>@contrato.Id_Contrato</td>
                <td>@($"{contrato.Nombre_Inquilino} {contrato.Apellido_Inquilino}")</td>
                <td>@contrato.Id_Inmueble</td>
                <td>@contrato.Fecha_Inicio.ToString("dd/MM/yyyy")</td>
                <td>@contrato.Fecha_Fin_Original.ToString("dd/MM/yyyy")</td>
                <td>$@contrato.Monto_Mensual</td>
                <td>@contrato.Estado</td>
                <td>
                    <a asp-controller="Contrato" asp-action="Detalle" asp-route-id="@contrato.Id_Contrato"
                        class="btn btn-info btn-sm">Ver Detalle</a>
                </td>
            </tr>
        }
    </tbody>
</table>