@{
    ViewData["Title"] = "Inicio";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 mb-4">¡Bienvenido a RaizesBlas!</h1>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">Propietarios</h5>
                            <p class="card-text">Gestiona el alta, baja y edición de propietarios.</p>
                            <a asp-controller="Propietario" asp-action="Index" class="btn btn-primary">Ver
                                Propietarios</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">Inquilinos</h5>
                            <p class="card-text">Administra los datos de tus inquilinos fácilmente.</p>
                            <a asp-controller="Inquilino" asp-action="Index" class="btn btn-success">Ver Inquilinos</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">Contratos</h5>
                            <p class="card-text">Consulta y gestiona los contratos de alquiler.</p>
                            <a asp-controller="Contrato" asp-action="Index" class="btn btn-warning">Ver Contratos</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>