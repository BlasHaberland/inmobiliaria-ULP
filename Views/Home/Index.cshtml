@{
    ViewData["Title"] = "Inicio";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 mb-4 text-white">¡Bienvenido a RaizesBlas!</h1>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm h-100 card-propietarios text-white border-0">
                        <div class="card-body">
                            <i class="bi bi-person-badge-fill fs-1 mb-2"></i>
                            <h5 class="card-title mt-2">Propietarios</h5>
                            <p class="card-text">Gestiona el alta, baja y edición de propietarios.</p>
                            <a asp-controller="Propietario" asp-action="Index"
                                class="btn btn-card btn-light text-primary fw-bold">Ver Propietarios</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm h-100 card-inquilinos text-white border-0">
                        <div class="card-body">
                            <i class="bi bi-people-fill fs-1 mb-2"></i>
                            <h5 class="card-title mt-2">Inquilinos</h5>
                            <p class="card-text">Administra los datos de tus inquilinos fácilmente.</p>
                            <a asp-controller="Inquilino" asp-action="Index"
                                class="btn btn-card btn-light text-success fw-bold">Ver Inquilinos</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm h-100 card-contratos text-white border-0">
                        <div class="card-body">
                            <i class="bi bi-file-earmark-text-fill fs-1 mb-2"></i>
                            <h5 class="card-title mt-2">Contratos</h5>
                            <p class="card-text">Consulta y gestiona los contratos de alquiler.</p>
                            <a asp-controller="Contrato" asp-action="Index"
                                class="btn btn-card btn-light text-warning fw-bold">Ver Contratos</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm h-100 card-inmuebles  text-white border-0">
                        <div class="card-body">
                            <i class="bi bi-building-fill fs-1 mb-2"></i>
                            <h5 class="card-title mt-2">Inmuebles</h5>
                            <p class="card-text">Consulta y gestiona los inmuebles que estan registrados.</p>
                            <a asp-controller="Inmueble" asp-action="Index"
                                class="btn btn-card btn-light text-info fw-bold">Ver
                                Inmuebles</a>
                        </div>
                    </div>
                </div>

                @if (User.IsInRole("administrador"))
                {
                    <div class="col-md-4 mb-3">
                        <div class="card shadow-sm h-100 card-usuarios text-white border-0">
                            <div class="card-body">
                                <i class="bi bi-clipboard-fill fs-1 mb-2z"></i>
                                <h5 class="card-title mt-2">Usuarios</h5>
                                <p class="card-text">Consulta y gestiona los usuarios que estan registrados en el sistema.
                                </p>
                                <a asp-controller="Usuario" asp-action="Index" class="btn btn-card btn-light fw-bold"
                                    style="color:#f860d7">Ver
                                    Usuarios</a>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/HomeIndexStyle.css" />
}