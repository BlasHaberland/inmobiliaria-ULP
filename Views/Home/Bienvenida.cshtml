@{
    ViewData["Title"] = "Bienvenida";
    ViewBag.OcultarNavbar = true;
}

<style>
    .bienvenida-container {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-color: #181a1b;
        color: #f1f1f1;
    }

    .bienvenida-title {
        font-size: 2.5rem;
        font-weight: bold;

        margin-bottom: 2rem;
        color: #fff;
    }

    .bienvenida-btn {
        min-width: 180px;
        font-size: 1.2rem;
        margin: 0.7rem 0;
        border: none;
        display: block;
    }

    .bienvenida-btn-success {
        background: linear-gradient(90deg, #1e824c 0%, #26a65b 100%);
        color: #fff;
        font-family: 'Roboto', Arial, sans-serif;
    }

    .bienvenida-btn-primary {
        background: linear-gradient(90deg, #283e51 0%, #485563 100%);
        color: #fff;
        font-family: 'Roboto', Arial, sans-serif;
    }

    .bienvenida-btn-success:hover,
    .bienvenida-btn-primary:hover {
        opacity: 0.85;
    }
</style>

<div class="bienvenida-container text-center">
    <h1 class="bienvenida-title">¡Bienvenido a Inmobiliaria Blas!</h1>
    <a asp-controller="Usuario" asp-action="Registro"
        class="btn bienvenida-btn bienvenida-btn-success btn-lg">Registrarme
        <i class="bi bi-plus-circle-fill"></i </a>
        <a asp-controller="Autenticacion" asp-action="Login"
            class="btn bienvenida-btn bienvenida-btn-primary btn-lg">Iniciar sesión
            <i class="bi bi-door-open-fill"></i></a>
</div>